<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Celebrities's edit Page</h2>
            
            <hr>

            <form method="POST" action="/celebrities/{{id}}/edit">
            
                <div class="form-group">
                    <label for="name">Title</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
            
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input name="occupation" type="text" class="form-control" id="occupation">
                </div>
                
                <div class="form-group">
                    <label for="catchPhrase">Catch Phrase</label>
                    <input name="catchPhrase" type="text" class="form-control" id="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark">Save Edit</button>
                <a class="btn btn-dark" href="/all-celebrities/">Back to the list</a>
            </form>

        </div>
    </div>


</div>
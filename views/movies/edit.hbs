<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Movies's edit Page</h2>
            
            <hr>

            <form method="POST" action="/movies/{{id}}/edit">
            
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" type="text" class="form-control" id="title">
                </div>
            
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input name="genre" type="text" class="form-control" id="genre">
                </div>
            
                <div class="form-group">
                    <label for="plot">Plot</label>
                    <input name="plot" type="text" class="form-control" id="plot">
                </div>


                <button type="submit" class="btn btn-dark">Save Edit</button>
                <a class="btn btn-dark" href="/all-movies/">Back to the list</a>
            </form>

        </div>
    </div>


</div>